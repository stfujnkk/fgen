{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "j2generator schema",
    "description": "fgen 配置约束",
    "type": "object",
    "properties": {
        "import": {
            "description": "导入其他配置文件",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "extractors": {
            "description": "提取器,用于动态改变配置数据。如连接数据库提取表结构存入配置defines字段",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "provider": {
                        "description": "模块名称",
                        "type": "string"
                    },
                    "param": {
                        "description": "模块参数",
                        "type": "object"
                    }
                },
                "required": [
                    "provider"
                ]
            }
        },
        "converters": {
            "description": "转换器,用于将数据输出。可以输出到文件,也可以输出到http请求中",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "provider": {
                        "description": "模块名称",
                        "type": "string"
                    },
                    "param": {
                        "description": "模块参数",
                        "type": "object"
                    }
                },
                "required": [
                    "provider"
                ]
            }
        },
        "base": {
            "description": "模板根路径",
            "type": "string"
        },
        "dest": {
            "description": "目标根路径",
            "type": "string"
        },
        "defines": {
            "description": "定义公共变量",
            "type": "object"
        },
        "pathMappers": {
            "description": "路径映射器,用于路由匹配",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "pattern": {
                        "description": "匹配规则",
                        "type": "string"
                    },
                    "dest": {
                        "description": "输出路径",
                        "type": "string"
                    },
                    "defines": {
                        "description": "定义变量",
                        "type": "object"
                    },
                    "extractors": {
                        "description": "提取器,用于动态改变配置数据。如连接数据库提取表结构存入配置defines字段",
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "provider": {
                                    "description": "模块名称",
                                    "type": "string"
                                },
                                "param": {
                                    "description": "模块参数",
                                    "type": "object"
                                }
                            },
                            "required": [
                                "provider"
                            ]
                        }
                    },
                    "converters": {
                        "description": "转换器,用于将数据输出。可以输出到文件,也可以输出到http请求中",
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "provider": {
                                    "description": "模块名称",
                                    "type": "string"
                                },
                                "param": {
                                    "description": "模块参数",
                                    "type": "object"
                                }
                            },
                            "required": [
                                "provider"
                            ]
                        }
                    },
                    "import": {
                        "description": "导入其他配置文件",
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "pattern",
                    "dest"
                ]
            }
        }
    },
    "required": [
        "pathMappers"
    ]
}